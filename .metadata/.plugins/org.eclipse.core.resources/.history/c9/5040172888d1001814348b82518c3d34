import java.util.LinkedList;


public class Guastaferro {

	public static Persona getPersonaPiuGiovane (LinkedList<Persona> persone) {
		Persona persona_temp= null;
		for(int i=0; i < persone.size();i++) {
			if(persone.get(i).getData_di_nascita().after(persone.get(i).getData_di_nascita())){
				persona_temp=persone.get(i);
			}
		}
		return persona_temp;
	}
	
	public static Persona getPersonaPiuVecchia(LinkedList<Persona> persone) {
		Persona persona_temp=null;
		for(int i=0; i < persone.size();i++) {
			if(persone.get(i).getData_di_nascita().before(persone.get(i).getData_di_nascita())) {
				persona_temp=persone.get(i);
			}
		}
		return persona_temp;
	}

}
