    		System.out.println("3 : AGGIORNAMENTO RESIDENZA DI UN CANDIDATO:");
    		System.out.println("4 : FINE:");
    		scelta=Integer.parseInt(scan.nextLine());
    		
    		switch(scelta) {
    			case 1:
    				System.out.println("Utente inserisci un codice per il candidato");
    				int cod=Integer.parseInt(scan.nextLine());
    				Candidato cand=dafaultCandidato.selectByTipo(cod);
    				if(cand==null) {
    					
    				}
    				else {
    					System.out.println("Codice candidato gi√† presente nel db impossibile inserire candidato");
    				}
    				break;
    			case 2:
    				break;
    			case 3:
    				break;
    			case 4:
    				break;
    			default:
    				System.out.println("Utente inserisci una scelta valida");
    		}
    		
    	}while(scelta!=4);
    	scan.close();
    }
}
